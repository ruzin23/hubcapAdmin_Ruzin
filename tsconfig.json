{
  "compileOnSave": false,
  "include": [
    "./src"
  ],
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    "lib": [
      "es2018",
      "esnext",
      "dom"
    ]
  }
}
